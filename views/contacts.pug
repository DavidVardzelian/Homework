extends layout.pug 
block append style
    link(rel='stylesheet' href='../styles/contactStyle.css')
block content
    .scrollboxWrapper
        div.scrollSpy
            h1 Your contacts: 
            .contactsWrapper
                each item in users
                    div.contacts
                        span.contactsItems= `${item.name} | ${item.phoneNum}`
                        .btn-group(role='group')
                           form(action=`/contacts/${item.id}?_method=DELETE` method='post' ) 
                                button.btn.btn-danger(type='submit')
                                    i(class="fa-solid fa-trash-can")
                                a(href=`contacts/edit/${item.id}`)
                                    button.btn.btn-success(type='button')
                                        i(class="fa-solid fa-pen-to-square")
                                        
                        
                 
                 


    